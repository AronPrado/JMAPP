<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/fecha_noticia_detalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Noticia del día 20224-05-16"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/titulo_noticia_detalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:text="Actualización en políticas de convivencia escolardwadwadwadwadwadwadwadwadwadwadwadwad wad wad wad wa dwadwadaw dwa dwa dwad wad wa"
        android:maxLines="4"
        android:textSize="20sp"
        android:layout_marginVertical="5dp"
        android:fontFamily="@font/librefranklin_extrabold"
        android:paddingTop="8dp"/>
    <ImageView
        android:id="@+id/img_noticia_detalle"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:paddingTop="8dp"/>
    <TextView
        android:id="@+id/descripcion_noticia_detalle"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MUCHA INFORMACION"
        android:maxLines="15"
        android:textAlignment="inherit"
        android:fontFamily="@font/librefranklin_semibold"
        android:textSize="15sp"
        android:paddingTop="8dp"/>
</LinearLayout>
