<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_info_estudiante"
    android:layout_margin="12dp"
    app:cardBackgroundColor="@color/material_dynamic_neutral_variant70"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    app:contentPadding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">


        <TextView
            android:id="@+id/nombre_estudiante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/librefranklin_extrabold"
            android:text="Enmanuel Benjamin Carrilo Apaza"
            android:textAlignment="center"
            android:textSize="50sp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/grado_seccion_estudiante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nombre_estudiante"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/librefranklin_extrabold"
            android:text="1Â° C - Secundaria"
            android:layout_marginTop="32dp"
            android:textAlignment="center"
            android:textSize="30sp"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_genero_estudiante"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_below="@+id/grado_seccion_estudiante"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="32dp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>