<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/txt_titulo_noticia"
            android:layout_width="300dp"
            android:text="Actualización en políticas de convivencia escolardwadwadwadwadwadwadwadwadwadwadwadwad wad wad wad wa dwadwadaw dwa dwa dwad wad wa"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:ellipsize="end"
            android:textSize="24sp"
            android:maxLines="2" />
        <TextView
            android:id="@+id/txt_fecha_noticia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="12-02-2004"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        android:paddingLeft="8dp">
        <ImageView
            android:id="@+id/img_noticia"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="10dp"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_contenido_noticia"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:paddingBottom="4dp"
                android:textSize="16sp"
                android:ellipsize="end"
                android:maxLines="6"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="end"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/editar_noticia"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/edit" />

                <ImageView
                    android:id="@+id/eliminar_noticia"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/delete" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/line_color"/>




</LinearLayout>