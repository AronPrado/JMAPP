<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_docente"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp">

    <TextView
        android:id="@+id/docente_itemdocente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textSize="15sp"
        android:paddingHorizontal="5dp"
        android:maxLines="2"
        android:text="Enmanuel BenjamÃ­n Carrillo Apaza"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/img_itemdocente"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/docente_itemdocente"/>

    <TextView
        android:id="@+id/curso_itemdocente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_itemdocente"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="10dp"
        android:paddingHorizontal="12dp"
        android:textSize="10sp"
        android:text="Historia"
        android:textAlignment="center"
        android:textStyle="bold" />

</RelativeLayout>